{
    "extends": [
        "next/core-web-vitals",
        "next/typescript"
    ],
    "ignorePatterns": [
        ".next/**",
        "out/**",
        "build/**",
        "dist/**",
        "node_modules/**",
        "*.config.ts",
        "*.config.js",
        "*.config.mjs",
        "*.config.cjs",
        "jest.config.ts",
        "next-env.d.ts",
        "scripts/**",
        "docs/**",
        "logs/**",
        ".agent/**",
        ".cursor/**",
        ".beads/**",
        ".git/**",
        ".vercel/**",
        ".roo/**",
        ".kilocode/**",
        ".clinerules/**",
        "memory/**",
        "prisma/**",
        "supabase/**",
        "public/**",
        "pages/**",
        "examples/**",
        "jules-scratch/**",
        "prompts/**",
        "*.tsbuildinfo",
        "global.d.ts",
        "*.log",
        "pnpm-lock.yaml",
        "package-lock.json",
        "yarn.lock",
        "*.md",
        "*.pdf",
        "*.html",
        "server.ts",
        "tailwind.config.ts",
        "postcss.config.mjs",
        "components.json"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "@typescript-eslint/no-non-null-assertion": "error",
        "@typescript-eslint/ban-ts-comment": "error",
        "@typescript-eslint/prefer-as-const": "error",
        "react-hooks/exhaustive-deps": "error",
        "react-hooks/rules-of-hooks": "error",
        "react/no-unescaped-entities": "error",
        "react/jsx-key": "error",
        "react/jsx-no-target-blank": "error",
        "@next/next/no-img-element": "error",
        "@next/next/no-html-link-for-pages": "error",
        "@next/next/no-sync-scripts": "error",
        "prefer-const": "error",
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-debugger": "error",
        "no-unused-vars": "off",
        "no-var": "error",
        "eqeqeq": [
            "error",
            "always"
        ]
    }
}
