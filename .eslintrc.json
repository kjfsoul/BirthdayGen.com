{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "ignorePatterns": [
    ".next/**",
    "out/**",
    "build/**",
    "dist/**",
    "node_modules/**",
    "*.config.ts",
    "*.config.js",
    "*.config.mjs",
    "*.config.cjs",
    "jest.config.ts",
    "next-env.d.ts",
    "scripts/**",
    "docs/**",
    "logs/**",
    ".agent/**",
    ".cursor/**",
    ".beads/**",
    ".git/**",
    ".vercel/**",
    ".roo/**",
    ".kilocode/**",
    ".clinerules/**",
    "memory/**",
    "prisma/**",
    "supabase/**",
    "public/**",
    "pages/**",
    "examples/**",
    "jules-scratch/**",
    "prompts/**",
    "*.tsbuildinfo",
    "global.d.ts",
    "*.log",
    "pnpm-lock.yaml",
    "package-lock.json",
    "yarn.lock",
    "*.md",
    "*.pdf",
    "*.html",
    "server.ts",
    "tailwind.config.ts",
    "postcss.config.mjs",
    "components.json"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-non-null-assertion": "warn",
    "@typescript-eslint/ban-ts-comment": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react/no-unescaped-entities": "warn",
    "react/display-name": "off",
    "react/prop-types": "off",
    "@next/next/no-img-element": "warn",
    "@next/next/no-html-link-for-pages": "warn",
    "prefer-const": "warn",
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-debugger": "warn",
    "no-unused-vars": "off"
  }
}
